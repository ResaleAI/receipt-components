{
  "name": "@resaleai/receipt-components",
  "version": "3.2.0",
  "files": [
    "dist/*"
  ],
  "main": "./dist/main.js",
  "module": "./dist/main.mjs",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "require": "./dist/main.js",
      "import": "./dist/main.mjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "preview": "vite preview",
    "start": "vite build && node dist/main.js",
    "test": "vitest",
    "test:unit": "vitest run",
    "coverage": "vitest --coverage",
    "clean": "rm -rf node_modules dist"
  },
  "devDependencies": {
    "@types/node": "^20.2.3",
    "@vitest/coverage-v8": "^0.34.1",
    "@resaleai/receipt-renderer": "workspace:*",
    "tsup": "^7.1.0",
    "typescript": "^5.0.2",
    "vite": "^4.3.2",
    "vite-plugin-dts": "^1.0.5",
    "vitest": "^0.33.0"
  },
  "nx": {
    "targets": {
      "build": {
        "outputs": [
          "{projectRoot}/dist"
        ],
        "dependsOn": [
          {
            "dependencies": "true",
            "target": "build",
            "params": "ignore"
          }
        ]
      }
    }
  },
  "dependencies": {
    "@resaleai/receipt-ast": "workspace:*",
    "@resaleai/receipt-escpos-renderer": "workspace:*",
    "@resaleai/receipt-plugin": "workspace:*"
  }
}
