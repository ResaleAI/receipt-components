{
  "name": "@resaleai/receipt-components",
  "version": "3.3.3",
  "files": [
    "dist/*"
  ],
  "main": "./dist/main.js",
  "module": "./dist/main.mjs",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "require": "./dist/main.js",
      "import": "./dist/main.mjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "preview": "vite preview",
    "start": "vite build && node dist/main.js",
    "lint": "eslint --ignore-path .eslintignore --ext .js,.ts && tsc",
    "format": "prettier --ignore-path .eslintignore --write \"**/*.+(js|ts|json)\"",
    "test": "vitest",
    "test:unit": "vitest run",
    "coverage": "vitest --coverage",
    "clean": "rm -rf node_modules dist coverage"
  },
  "devDependencies": {
    "@resaleai/receipt-renderer": "workspace:*",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vitest/coverage-v8": "^0.34.6",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.1.1",
    "tsup": "^7.2.0",
    "typescript": "^5.3.3",
    "vite": "^4.5.1",
    "vite-plugin-dts": "^1.7.3",
    "vitest": "^0.33.0"
  },
  "nx": {
    "targets": {
      "build": {
        "outputs": [
          "{projectRoot}/dist"
        ],
        "dependsOn": [
          {
            "dependencies": "true",
            "target": "build",
            "params": "ignore"
          }
        ]
      }
    }
  },
  "dependencies": {
    "@resaleai/receipt-ast": "workspace:*",
    "@resaleai/receipt-escpos-renderer": "workspace:*",
    "@resaleai/receipt-plugin": "workspace:*"
  }
}
