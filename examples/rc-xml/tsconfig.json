{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "noEmit": true,
    "baseUrl": "../../packages/rc-xml/src",
    "paths": {
      "@/*": ["../../packages/rc-xml/*"]
    }
  },
  "include": ["../../packages/rc-xml/src/**/*", "../../packages/rc-xml/test/**/*"]
}
